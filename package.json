{
	"name": "vscode-stdf-preview",
	"displayName": "STDF Preview",
	"description": "vscode extension to preview STDF files.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.64.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vscode-stdf-preview.helloWorld",
		"onCommand:stdf.profile.preview",
		"onCommand:stdf.map.preview",
		"onCommand:stdf.detail.preview",
		"onCommand:stdf.records.preview",
		"onCommand:stdf.shift.preview",
		"onLanguage:stdf"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "stdf",
				"extensions": [
					".std",
					".stdf"
				],
				"aliases": [
					"STD",
					"STDF"
				]
			}
		],
		"commands": [
			{
				"command": "stdf.profile.preview",
				"title": "Profile Preview",
				"category": "STDF",
				"icon": "$(symbol-keyword)"
			},
			{
				"command": "stdf.map.preview",
				"title": "Map Preview",
				"category": "STDF",
				"icon": "$(symbol-keyword)"
			},
			{
				"command": "stdf.detail.preview",
				"title": "Detail Preview",
				"category": "STDF",
				"icon": "$(symbol-keyword)"
			},
			{
				"command": "stdf.records.preview",
				"title": "Records Preview",
				"category": "STDF",
				"icon": "$(symbol-keyword)"
			},
			{
				"command": "stdf.shift.preview",
				"title": "Shift Preview",
				"category": "STDF",
				"icon": "$(symbol-keyword)"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "stdf.profile.preview",
					"when": "resourceFilename =~ /.*\\.(std|stdf)/",
					"group": "navigation@1"
				},
				{
					"command": "stdf.map.preview",
					"when": "resourceFilename =~ /.*\\.(std|stdf)/",
					"group": "navigation@2"
				},
				{
					"command": "stdf.detail.preview",
					"when": "resourceFilename =~ /.*\\.(std|stdf)/",
					"group": "navigation@3"
				},
				{
					"command": "stdf.records.preview",
					"when": "resourceFilename =~ /.*\\.(std|stdf)/",
					"group": "navigation@4"
				}
			],
			"editor/title": [
				{
					"command": "stdf.shift.preview",
					"when": "resourceFilename =~ /.*\\.(std|stdf)/",
					"group": "navigation@1"
				}
			]
		},
		"keybindings": [],
		"configuration": {
			"title": "STDF Preview",
			"properties": {
				"STDF.Preview.recordsIncluded": {
					"type": "string",
					"default": "FAR,ATR,MIR,MRR,PCR,WIR,WRR,WCR",
					"markdownDescription": "Indicate STDF Records to be analysed.\n\nBe `NOT` recommended to set up multi-results records, such as PIR, PTR, FTP, PRR, etc., as it will comsume `a lot of memory` to parse them."
				},
				"STDF.Preview.notShowMissingField": {
					"type": "boolean",
					"default": false,
					"description": "Don't show the field while missing its value in file."
				},
				"STDF.Preview.showFieldDescription": {
					"type": "boolean",
					"default": false,
					"description": "Show the field description."
				},
				"STDF.Preview.drawBackgroundGrid": {
					"type": "boolean",
					"default": true,
					"description": "Draw background grid lines."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.64.0",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"@vscode/test-electron": "^2.0.3",
		"eslint": "^8.6.0",
		"glob": "^7.2.0",
		"gridjs": "^5.0.2",
		"mocha": "^9.1.3",
		"typescript": "^4.5.4"
	},
	"dependencies": {
		"stdf-analyser": "^1.0.3"
	}
}
