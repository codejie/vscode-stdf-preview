{
	"name": "vscode-stdf-preview",
	"displayName": "STDF Preview",
	"description": "vscode extension to preview STDF files.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.64.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vscode-stdf-preview.helloWorld",
		"onCommand:stdf.profile.preview",
		"onCommand:stdf.detail.preview",
		"onCommand:stdf.shift.preview",
		"onLanguage:stdf"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "stdf",
				"extensions": [
					".std",
					".stdf"
				],
				"aliases": [
					"STD",
					"STDF"
				]
			}
		],
		"commands": [
			{
				"command": "vscode-stdf-preview.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "stdf.profile.preview",
				"title": "Profile Preview",
				"category": "STDF",
				"icon": "$(symbol-keyword)"
			},
			{
				"command": "stdf.detail.preview",
				"title": "Detail Preview",
				"category": "STDF",
				"icon": "$(symbol-keyword)"
			},
			{
				"command": "stdf.shift.preview",
				"title": "Shift Preview",
				"category": "STDF",
				"icon": "$(symbol-keyword)"
			}			
		],
		"menus": {
			"explorer/context": [
				{
					"command": "stdf.profile.preview",
					"when": "resourceFilename =~ /.*\\.(std|stdf)/",
					"group": "navigation@1"
				},
				{
					"command": "stdf.detail.preview",
					"when": "resourceFilename =~ /.*\\.(std|stdf)/",
					"group": "navigation@2"
				}				
			],			
			"editor/title": [
				{
					"command": "stdf.shift.preview",
					"when": "resourceFilename =~ /.*\\.(std|stdf)/",
					"group": "navigation@1"
				}
			]
		},
		"keybindings": []
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.64.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"eslint": "^8.6.0",
		"glob": "^7.2.0",
		"mocha": "^9.1.3",
		"typescript": "^4.5.4",
		"@vscode/test-electron": "^2.0.3"
	}
}
